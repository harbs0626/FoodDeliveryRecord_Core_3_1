@model RecordReportViewModel

@if (Model == null)
{
    <div class="alert alert-warning">
        <b>Note:</b>&nbsp;No record(s) found.
    </div>
}
else
{
    if (TempData["SuccessResult"] != null)
    {
        <div class="alert alert-success">
            <b>Note:</b>&nbsp;@TempData["SuccessResult"]
        </div>
    }
    @*<div class="alert alert-info">
        <b>Note:</b>&nbsp;@Model.Receivers.Count() record(s) found.
    </div>*@

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>
                    <input type="checkbox" />
                </td>
                <td>Unit Name</td>
                <td>Unit Number</td>
                <td>Receiver</td>
                <td>Vendor</td>
                <td>Day</td>
                <td>Delivery Date</td>
                <td>Delivery Time</td>
                <td style="width:300px;">Action(s)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Receivers)
            {
                <tr>
                    <td>
                        <input type="checkbox" />
                    </td>
                    <td>@r.UnitName</td>
                    <td>@r.UnitNumber</td>
                    <td>@r.FirstName @r.LastName</td>
                    <td>@r.Vendor</td>
                    <td>@r.Day</td>
                    <td>@r.DeliveryDate</td>
                    <td>@r.DeliveryTime</td>
                    <td class="align-middle" align="center">
                        <button class="btn btn-info"><i class="fa fa-eye"></i>&nbsp;View</button>
                        <a class="btn btn-secondary" asp-controller="Home" asp-action="Record" asp-route-_recordId="@r.Id">
                            <i class="fa fa-pen-alt"></i>&nbsp;Edit
                        </a>
                        <button class="btn btn-danger"><i class="fa fa-exclamation-triangle"></i>&nbsp;Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
